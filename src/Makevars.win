.PHONY: clean

CXX_STD=CXX11
CL_DIR=../inst/include
CL_INC=$(CL_DIR)/inc


#This script finds the root directory of the windows system and looking for the
#dll file in the root/system32/ folder.
#eg. C:/windows/system32/OpenCL.dll
PKG_LIBS=`${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe "openCL_lib_win.R"` 

PKG_CPPFLAGS = -I${R_HOME}/include -I${CL_INC} -DCL_TARGET_OPENCL_VERSION=220 -DCL_USE_DEPRECATED_OPENCL_1_2_APIS
all: $(SHLIB)
	

clean:
	$(RM) *.lib
	$(RM) *.so
	$(RM) *.o
	
	


