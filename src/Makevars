
CXX_STD=CXX11
CL_INC=../inst/include/inc


PKG_LIBS = -L../inst/include/lib -lOpenCL
PKG_CPPFLAGS = -I${R_HOME}/include -I${CL_INC} -DCL_TARGET_OPENCL_VERSION=220 -DCL_USE_DEPRECATED_OPENCL_1_2_APIS


$(SHLIB): ../inst/include/lib/libOpenCL.a


../inst/include/lib/libOpenCL.a:
	@(cd ../inst/include/ && $(MAKE) ICD_LINUX ICD_OS=icd_linux \
	CC="$(CC)" CFLAGS="$(ALL_CFLAGS)" AR="$(AR)")
	